
<div class="header bg-primary" style="z-index:10;">
<a href="/gists" class="btn btn-primary btn-lg active" role="button"> Main Page</a>
<a href="https://github.com/KLamkiewicz/RubyGist" class="btn btn-primary btn-lg active" role="button"> Github</a>

<form class="navbar-form navbar-right" role="form">
Description
                <%= form_tag gists_path, :method => 'get' do %>
                 <%= (text_field_tag :search, params[:search], class:'form-control') %>
                <%= submit_tag "Search", class:'btn btn-warning' , :name => nil, :onclick => "$( document ).ready;"%>
               
               
                <% end %>
                
</form>

</div>

<div style="padding-top:200px; text-align: center; font-size: 60px;"> My gists</div>


<div style="padding-top:40px; float: right"> <%= link_to 'New Gist', new_gist_path, class:'btn btn-success btn-lg' %> </div>


<div class="main center-block" >

<table id="gists" > 
  <%= render @gists %>
</table>

<div id="infinite-scrolling">
  <%= will_paginate %>
</div>

</div>


